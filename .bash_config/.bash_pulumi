function get_stack {
    if [[ "$STACK_DIR" == $(pwd) ]]; then
        if [[ -z "$STACK_CACHE" ]]; then
            STACK_CACHE=$(pulumi stack --show-name)
        fi

    echo "$STACK_CACHE"
    else
        STACK_DIR=$(pwd)
        STACK_CACHE=$(pulumi stack --show-name)
        echo "$STACK_CACHE"
    fi
}